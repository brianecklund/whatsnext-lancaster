{
  "id": "event",
  "label": "Event",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Event title"
        }
      },
      "summary": {
        "type": "Text",
        "config": {
          "label": "Summary",
          "placeholder": "Short one-sentence summary"
        }
      },
      "start_datetime": {
        "type": "Timestamp",
        "config": {
          "label": "Start date & time"
        }
      },
      "end_datetime": {
        "type": "Timestamp",
        "config": {
          "label": "End date & time"
        }
      },
      "all_day": {
        "type": "Boolean",
        "config": {
          "label": "All day event"
        }
      },
      "event_type": {
        "type": "Select",
        "config": {
          "label": "Event type",
          "options": [
            "Live Concert",
            "Gallery Show",
            "Market",
            "Comedy",
            "Workshop",
            "Community",
            "Food",
            "Other"
          ]
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "options": [
            "Scheduled",
            "Cancelled",
            "Postponed"
          ]
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured event"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Event image"
        }
      },
      "website_url": {
        "type": "Link",
        "config": {
          "label": "Event website",
          "select": "web"
        }
      },
      "tickets_url": {
        "type": "Link",
        "config": {
          "label": "Tickets URL",
          "select": "web"
        }
      },
      "cost": {
        "type": "KeyText",
        "config": {
          "label": "Cost / Cover",
          "placeholder": "Free, $10, $25 advance"
        }
      },
      "age_restriction": {
        "type": "Select",
        "config": {
          "label": "Age restriction",
          "options": [
            "All ages",
            "18+",
            "21+"
          ]
        }
      },
      "location": {
        "type": "Link",
        "config": {
          "label": "Location",
          "select": "document",
          "customtypes": [
            "location"
          ]
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag"
              }
            }
          }
        }
      }
    }
  }
}
